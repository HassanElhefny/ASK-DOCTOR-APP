<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recycler_developer_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="@id/recycler_developer_design_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/hassan" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recycler_developer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/artifika"
        android:gravity="center"
        android:text="Hassan Reda Elhefny"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_developer_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recycler_developer_design_view1"
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_developer_name"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_developer_iv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recycler_developer_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="hrelhefny@gmail.com"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/recycler_developer_design_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_developer_iv"
        app:layout_constraintTop_toTopOf="@id/recycler_developer_design_view1" />

    <View
        android:id="@+id/recycler_developer_design_view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>